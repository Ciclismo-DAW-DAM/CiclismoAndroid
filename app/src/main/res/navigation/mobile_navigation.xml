<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dam.ciclismoApp.ui.home.RacesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_races" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.dam.ciclismoApp.ui.dashboard.ParticipationsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_participations" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.dam.ciclismoApp.ui.notifications.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dam.ciclismoApp.ui.SplashFragment"
        android:label="Splash Screen"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>